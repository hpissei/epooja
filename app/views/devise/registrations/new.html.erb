<br><br>
<div class="container">
<div class="row">
  <div class="col-sm-offset-2 col-sm-6 col-xs-offset-2 col-sm-6">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#customer">Sign Up As Customer</a></li>
      <li class=""><a data-toggle="tab" href="#pandit">Sign Up As Pandit</a></li>
    </ul>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-sm-offset-2 col-sm-6 col-xs-offset-2 col-sm-6">
  <div class="tab-content">
    <div id="customer" class="tab-pane fade in active">
      <h3>Sign Up As Customer</h3>
    </div>

    <div id="pandit" class="tab-pane fade">
      <h3>Sign Up As Pandit</h3>
    </div>
</div>
</div>
  <%= devise_error_messages! %>
<div class="row">
  <div class="col-sm-offset-2 col-sm-6 col-xs-offset-2 col-xs-6">
    <%= f.hidden_field :user_type, value: "" %>
    <%= f.label :email, class: "label label-primary" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-6 col-xs-offset-2 col-xs-6">
    <%= f.label :password, class: "label label-primary" %>
    <br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "minimum #{@minimum_password_length} characters " %>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-6 col-xs-offset-2 col-xs-6">
    <%= f.label :password_confirmation, class: "label label-primary" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
</div><br />
<div class="row">
  <div class="col-sm-offset-2 col-sm-2 col-xs-offset-2 col-xs-2">
    <%= f.submit "Sign up", class: "btn btn-success btn-sm"%>
  </div>
  <div class="col-sm-2 col-xs-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>

</div>
